{
  "metadata": {
    "name": "bold",
    "version": "1.0.0",
    "author": "Ecommerce Platform",
    "description": "Bold colors and typography for maximum impact"
  },
  "colors": {
    "primary": "#dc2626",
    "secondary": "#ea580c",
    "accent": "#f59e0b",
    "background": "#ffffff",
    "surface": "#fef2f2",
    "text": {
      "primary": "#1f2937",
      "secondary": "#4b5563",
      "muted": "#6b7280"
    },
    "border": "#fca5a5",
    "success": "#10b981",
    "warning": "#f59e0b",
    "error": "#dc2626",
    "info": "#3b82f6"
  },
  "typography": {
    "fontFamily": {
      "heading": "Poppins, system-ui, sans-serif",
      "body": "Poppins, system-ui, sans-serif",
      "mono": "monospace"
    },
    "fontSize": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem"
    },
    "fontWeight": {
      "normal": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700
    },
    "lineHeight": {
      "tight": "1.2",
      "normal": "1.5",
      "relaxed": "1.75"
    }
  },
  "spacing": {
    "xs": "0.25rem",
    "sm": "0.5rem",
    "md": "1rem",
    "lg": "1.5rem",
    "xl": "2rem",
    "2xl": "3rem",
    "3xl": "4rem"
  },
  "borderRadius": {
    "sm": "0.375rem",
    "md": "0.5rem",
    "lg": "0.75rem",
    "xl": "1rem",
    "full": "9999px"
  },
  "components": {
    "header": {
      "style": "sticky",
      "backgroundColor": "#ffffff",
      "textColor": "#1f2937",
      "height": "76px",
      "sticky": true,
      "shadow": true,
      "borderBottom": false
    },
    "footer": {
      "style": "detailed",
      "backgroundColor": "#1f2937",
      "textColor": "#f9fafb",
      "columns": 4,
      "showNewsletter": true
    },
    "productCard": {
      "style": "shadow",
      "imageAspectRatio": "4/5",
      "showBadges": true,
      "showQuickView": true,
      "borderRadius": "0.75rem",
      "padding": "0",
      "hoverEffect": "glow"
    },
    "buttons": {
      "style": "pill",
      "primaryColor": "#dc2626",
      "hoverColor": "#b91c1c",
      "textColor": "#ffffff",
      "padding": "0.875rem 2rem",
      "borderRadius": "9999px"
    }
  },
  "layout": {
    "containerMaxWidth": "1400px",
    "pagePadding": "1.5rem",
    "sectionSpacing": "5rem"
  }
}

