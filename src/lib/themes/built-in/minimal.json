{
  "metadata": {
    "name": "minimal",
    "version": "1.0.0",
    "author": "Ecommerce Platform",
    "description": "Clean, minimal design with plenty of white space"
  },
  "colors": {
    "primary": "#000000",
    "secondary": "#6b7280",
    "accent": "#3b82f6",
    "background": "#ffffff",
    "surface": "#f9fafb",
    "text": {
      "primary": "#111827",
      "secondary": "#6b7280",
      "muted": "#9ca3af"
    },
    "border": "#e5e7eb",
    "success": "#10b981",
    "warning": "#f59e0b",
    "error": "#ef4444",
    "info": "#3b82f6"
  },
  "typography": {
    "fontFamily": {
      "heading": "system-ui, -apple-system, sans-serif",
      "body": "system-ui, -apple-system, sans-serif",
      "mono": "monospace"
    },
    "fontSize": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem"
    },
    "fontWeight": {
      "normal": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700
    },
    "lineHeight": {
      "tight": "1.25",
      "normal": "1.5",
      "relaxed": "1.75"
    }
  },
  "spacing": {
    "xs": "0.25rem",
    "sm": "0.5rem",
    "md": "1rem",
    "lg": "1.5rem",
    "xl": "2rem",
    "2xl": "3rem",
    "3xl": "4rem"
  },
  "borderRadius": {
    "sm": "0.125rem",
    "md": "0.375rem",
    "lg": "0.5rem",
    "xl": "0.75rem",
    "full": "9999px"
  },
  "components": {
    "header": {
      "style": "minimal",
      "backgroundColor": "#ffffff",
      "textColor": "#111827",
      "height": "64px",
      "sticky": true,
      "shadow": false,
      "borderBottom": true
    },
    "footer": {
      "style": "minimal",
      "backgroundColor": "#f9fafb",
      "textColor": "#6b7280",
      "columns": 4,
      "showNewsletter": false
    },
    "productCard": {
      "style": "minimal",
      "imageAspectRatio": "4/5",
      "showBadges": true,
      "showQuickView": false,
      "borderRadius": "0.5rem",
      "padding": "0",
      "hoverEffect": "lift"
    },
    "buttons": {
      "style": "rounded",
      "primaryColor": "#000000",
      "hoverColor": "#111827",
      "textColor": "#ffffff",
      "padding": "0.75rem 1.5rem",
      "borderRadius": "0.375rem"
    }
  },
  "layout": {
    "containerMaxWidth": "1280px",
    "pagePadding": "1rem",
    "sectionSpacing": "4rem"
  }
}

