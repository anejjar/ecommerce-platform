{
  "metadata": {
    "name": "minimal",
    "version": "1.0.0",
    "author": "Ecommerce Platform",
    "description": "Clean, minimal design with plenty of white space"
  },
  "colors": {
    "primary": "#000000",
    "secondary": "#6b7280",
    "accent": "#3b82f6",
    "background": "#ffffff",
    "surface": "#fafafa",
    "text": {
      "primary": "#0a0a0a",
      "secondary": "#525252",
      "muted": "#a3a3a3"
    },
    "border": "#e5e5e5",
    "success": "#10b981",
    "warning": "#f59e0b",
    "error": "#ef4444",
    "info": "#3b82f6"
  },
  "typography": {
    "fontFamily": {
      "heading": "'Helvetica Neue', system-ui, -apple-system, sans-serif",
      "body": "'Helvetica Neue', system-ui, -apple-system, sans-serif",
      "mono": "'SF Mono', monospace"
    },
    "fontSize": {
      "xs": "0.6875rem",
      "sm": "0.8125rem",
      "base": "0.9375rem",
      "lg": "1.0625rem",
      "xl": "1.1875rem",
      "2xl": "1.375rem",
      "3xl": "1.625rem",
      "4xl": "2rem"
    },
    "fontWeight": {
      "normal": 300,
      "medium": 400,
      "semibold": 500,
      "bold": 600
    },
    "lineHeight": {
      "tight": "1.3",
      "normal": "1.6",
      "relaxed": "1.9"
    }
  },
  "spacing": {
    "xs": "0.5rem",
    "sm": "1rem",
    "md": "2rem",
    "lg": "3rem",
    "xl": "4rem",
    "2xl": "6rem",
    "3xl": "8rem"
  },
  "borderRadius": {
    "sm": "0",
    "md": "0",
    "lg": "0",
    "xl": "0",
    "full": "0"
  },
  "components": {
    "header": {
      "style": "minimal",
      "backgroundColor": "#ffffff",
      "textColor": "#0a0a0a",
      "height": "56px",
      "sticky": true,
      "shadow": false,
      "borderBottom": true
    },
    "footer": {
      "style": "minimal",
      "backgroundColor": "#fafafa",
      "textColor": "#525252",
      "columns": 3,
      "showNewsletter": false
    },
    "productCard": {
      "style": "minimal",
      "imageAspectRatio": "1/1",
      "showBadges": false,
      "showQuickView": false,
      "borderRadius": "0",
      "padding": "0",
      "hoverEffect": "none"
    },
    "buttons": {
      "style": "square",
      "primaryColor": "#000000",
      "hoverColor": "#262626",
      "textColor": "#ffffff",
      "padding": "0.75rem 2rem",
      "borderRadius": "0"
    }
  },
  "layout": {
    "containerMaxWidth": "1200px",
    "pagePadding": "2rem",
    "sectionSpacing": "6rem"
  },
  "customCSS": "/* Minimal Theme - Ultra Clean Design */\nbody { letter-spacing: 0.01em; }\nh1, h2, h3, h4, h5, h6 { font-weight: 300; letter-spacing: -0.02em; }\n.product-card { border: 1px solid var(--theme-color-border); transition: opacity 0.2s; }\n.product-card:hover { opacity: 0.7; }\nbutton, .btn { text-transform: uppercase; font-size: 0.8125rem; letter-spacing: 0.1em; font-weight: 500; }\n.container { max-width: var(--theme-container-max-width); margin: 0 auto; }\n.section { margin-bottom: var(--theme-section-spacing); }\n"
}
